@model IEnumerable<Category>

<h1>Categories list</h1>

<table class="table table-bordered table-striped">
    <thead>
        <th>
            Category Name
        </th>
        <th>
            Display Order
        </th>
    </thead>
    <tbody>
        @foreach(var category in Model.OrderBy(c => c.DisplayOrder))
        {
            <tr>
                <td>@category.Name</td>
                <td>
                    @category.DisplayOrder
                </td>
            </tr>
        }
    </tbody>
</table>
